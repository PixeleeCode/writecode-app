<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
    <channel>
        <title>WriteCode</title>
        <description>Les derniers tutoriels de WriteCode</description>
        <link>https://writecode.fr</link>
        {% for course in courses %}
            <item>
                <title>{{ course.title }}</title>
                <pubDate>{{ course.updatedAt|date('Y-m-d\TH:i:sP') }}</pubDate>
                <link>{{ path('course_show', { slug: course.slug }) }}</link>
            </item>
        {% endfor %}
    </channel>
</rss>
