{% block _training_chapters_entry_row %}
    {% set isAdmin = is_granted('ROLE_ADMIN') %}

    <div id="{{ id }}" class="mb-2 flex items-center justify-between space-x-4 list-group-item">
        <p class="text-sm text-gray-400 chapter-id"></p>
        <div class="w-full">
            <div class="relative w-full text-gray-700">
                {{- form_row(form.course) -}}
                <div class="absolute inset-y-0 right-0 flex items-center px-2 pointer-events-none">
                    <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                        <path d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" fill-rule="evenodd"></path>
                    </svg>
                </div>
            </div>
            <span class="errors">{{- form_errors(form.course) -}}</span>
        </div>
        {{- form_row(form.position, { value: (id|replace({ 'training_chapters_': '' })|number_format)+1 }) -}}
        {% if isAdmin %}
            <button type="button" data-action="prototype#removeChapter" data-id="{{ id }}" class="py-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 hover:text-red-500" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
            </button>
            <button type="button" class="py-3 handle">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 hover:text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l4-4 4 4m0 6l-4 4-4-4" />
                </svg>
            </button>
        {% endif %}
    </div>
{% endblock %}
