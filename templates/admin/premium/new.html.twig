{% extends 'layouts/admin/default.html.twig' %}

{% block title %}Nouvel abonnement - {{ parent() }}{% endblock %}

{% block body %}
    {{ form_start(form, { 'attr': { 'id': 'form-admin' }}) }}
        <div class="h-44 bg-gray-100 my-auto pt-16">
            <div class="pl-20 w-4/5">
                <div class="flex justify-between">
                    <div class="flex items-center">
                        <a href="{{ path('admin_premium_list') }}" class="text-red-500 hover:text-red-300 transition ease-in-out mt-1 mr-2">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-7 w-7">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                            </svg>
                        </a>
                        <h1 class="text-5xl text-gray-700">Nouvel abonnement</h1>
                    </div>
                    <div class="flex items-center space-x-4">
                        <a href="{{ path('admin_premium_list') }}" class="btn btn-outline my-auto py-3">Annuler</a>
                        <button class="btn btn-green my-auto py-3">Enregistrer l'abonnement</button>
                    </div>
                </div>
            </div>
        </div>

        {# Formulaire de cr√©ation d'un nouvel abonnement #}
        <div class="pt-12 pl-20 w-4/5">
            <div class="flex items-center space-x-6">
                <div class="w-1/5 mb-6">
                    {{ form_label(form.amount) }}
                    {{ form_widget(form.amount) }}
                    <span class="errors">{{ form_errors(form.amount) }}</span>
                </div>
                <div class="w-1/5 mb-6">
                    {{ form_label(form.recurring) }}
                    <div class="relative w-full text-gray-700">
                        {{ form_widget(form.recurring) }}
                        <div class="absolute inset-y-0 right-0 flex items-center px-2 pointer-events-none">
                            <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                                <path d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" fill-rule="evenodd"></path>
                            </svg>
                        </div>
                    </div>
                    <span class="errors">{{ form_errors(form.recurring) }}</span>
                </div>
                <div class="w-1/12 mb-6">
                    {{ form_label(form.is_visible) }}
                    <label for="price_is_visible" class="flex items-center cursor-pointer mt-1">
                        <div class="relative">
                            {{ form_widget(form.is_visible, { 'attr': { 'class': 'hidden' }}) }}
                            <!-- inner line -->
                            <div class="toggle_line w-10 h-4 bg-gray-200 rounded-full shadow-inner"></div>
                            <!-- dot -->
                            <div class="toggle_dot absolute w-6 h-6 bg-white rounded-full shadow inset-y-0 left-0"></div>
                        </div>
                    </label>
                    <span class="errors">{{ form_errors(form.is_visible) }}</span>
                </div>
                <div class="mb-6">
                    {{ form_label(form.promote) }}
                    <label for="price_promote" class="flex items-center cursor-pointer mt-1">
                        <div class="relative">
                            {{ form_widget(form.promote, { 'attr': { 'class': 'hidden' }}) }}
                            <!-- inner line -->
                            <div class="toggle_line w-10 h-4 bg-gray-200 rounded-full shadow-inner"></div>
                            <!-- dot -->
                            <div class="toggle_dot absolute w-6 h-6 bg-white rounded-full shadow inset-y-0 left-0"></div>
                        </div>
                    </label>
                    <span class="errors">{{ form_errors(form.promote) }}</span>
                </div>
            </div>
            <div class="w-4/6 mb-6">
                {{ form_label(form.promotionalText) }}
                {{ form_widget(form.promotionalText) }}
                <span class="errors">{{ form_errors(form.promotionalText) }}</span>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
