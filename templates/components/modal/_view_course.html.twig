<div id="modalCourse" data-controller="modal" class="hidden fixed z-10 inset-0 overflow-y-auto transition ease-in-out">
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
        <div class="fixed inset-0 transition-opacity" aria-hidden="true">
            <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
        </div>

        <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

        <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-7xl" role="dialog" aria-modal="true" aria-labelledby="modal-headline">
            <div class="bg-gray-50 px-4 py-3 mb-12 sm:px-6 sm:flex sm:flex-row-reverse">
                <button data-action="modal#close" class="close mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none sm:mt-0 sm:ml-3 sm:w-auto">
                    Fermer l'aperçu
                </button>
            </div>
            <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                    <div class="mt-2">
                        {# Titre de l'article #}
                        <h1 class="text-6xl font-bold text-center mx-auto mb-8">{{ course.title }}</h1>

                        {# Entête de l'article #}
                        <section>
                            <img src="{{ asset_image(asset('uploads/courses/'~ course.picture), { 'w': 975, 'h': 600 }) }}" alt="{{ course.title }}" class="rounded-lg mx-auto">
                            <div class="flex -space-x-2 justify-center -mt-8">
                                {% for technology in course.technology %}
                                    <a href="{{ path('course_technologie', { slug: technology.slug}) }}">
                                        <img src="{{ asset_image(asset('uploads/technologies/'~ technology.picture), { 'w': 56, 'h': 56 }) }}" alt="{{ technology.name }}" class="inline-block h-16 w-16 rounded-full ring-2 ring-white">
                                    </a>
                                {% endfor %}
                            </div>
                            <p class="text-blue-400 uppercase text-center mt-6 mb-8 text-lg">
                                {{ course.createdAt|format_datetime(pattern='d MMMM Y') }}
                            </p>
                        </section>

                        {# Article #}
                        <section data-controller="highlight" class="relative markdown-body w-2/3 mx-auto mt-24">
                            {{ course.content|markdown }}
                        </section>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-4 py-3 mt-12 sm:px-6 sm:flex sm:flex-row-reverse">
                <button data-action="modal#close" class="close mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none sm:mt-0 sm:ml-3 sm:w-auto">
                    Fermer l'aperçu
                </button>
            </div>
        </div>
    </div>
</div>
