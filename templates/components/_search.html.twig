<div id="input-search" class="hidden fixed z-10 inset-0 overflow-y-auto" data-controller="search" data-action="click->search#toggle">
    <div class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
        <div class="fixed inset-0 bg-gray-900 bg-opacity-80 transition-opacity" aria-hidden="true"></div>
        <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

        <div class="inline-block align-bottom rounded-lg text-left overflow-hidden transform transition-all sm:my-8 sm:align-middle sm:max-w-4xl sm:w-full">
            <form id="search" action="{{ path('search') }}" method="get">
                <input type="search" name="q" id="q" placeholder="Recherche..." class="text-4xl lg:text-8xl" autofocus>
            </form>
        </div>
    </div>
</div>
